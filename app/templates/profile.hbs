                  <li><input type="checkbox" class="faChkRnd" checked=""><label>Andrea Moulding</label></li>
                </ul>
                <button class="btn btn-primary">Update</button>
              </div>
          </form>
        </div>
        </form>
      </div>

  </div>
</div>
